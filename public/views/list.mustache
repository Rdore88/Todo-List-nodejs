<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Signup</title>
    <link rel="stylesheet" href="/css/list.css">
  </head>
  <body>
    <form action="/list" method="post">
      <input type="text" name="item" value="" placeholder="Add Item to Todo List...">
      <input type="submit" name="" value="submit">
    </form>
    <div class="list-container">
    {{#items}}
      {{^complete}}
      <div class="new">
        <a href="/complete/{{id}}"><button type="button">Mark Complete</button></a>
        <p>{{item}}</p>
      </div>
      {{/complete}}
    {{/items}}
    <h1>Complete</h1>
    {{#items}}
    {{#complete}}
    <div class="complete">
      <del>{{item}}</del>
    </div>
    {{/complete}}
    {{/items}}
    </div>
  </body>
</html>
